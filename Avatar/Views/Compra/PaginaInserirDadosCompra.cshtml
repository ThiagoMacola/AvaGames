			<img class="imagem1" src="~/Fotos/coroa.jpg" />
			<h3><b>Tudo Isso por apenas :  R$: 159,00</b></h3>
			<br />

			<div class="form-group">
				@Html.LabelFor(model => model.Comprador.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.Comprador.Nome, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Comprador.Nome, "", new { @class = "text-danger" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(model => model.Comprador.CPF, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.Comprador.CPF, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Comprador.CPF, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.FormaPagamento, "Forma Pagamento", htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					Cartão @Html.RadioButtonFor(model => model.FormaPagamento, "Cartão")
					Boleto @Html.RadioButtonFor(model => model.FormaPagamento, "Boleto")
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Comprar" class="btn btn-default" />
				</div>
			</div>
		</div>
	</div>
}



<style>

	.imagem1 {
		height: 80px;
		width: 80px;
	}
</style>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
